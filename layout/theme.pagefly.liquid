{% if customer %}
  <script defer="defer">
    // klaviyo
    if(localStorage.user_klaviyo){
      let user = JSON.parse(localStorage.user_klaviyo);
      if(user.email == '{{ customer.email }}'){
        let data = {
          "g": "TeHSAM",
          "email": '{{ customer.email }}',
          "$fields": "$source, $first_name, $last_name, Birthday",
          "$source": "Register form",
          "$first_name": '{{ customer.first_name }}',
          "$last_name": '{{ customer.last_name }}'
        }
        if(user.birthday) data.Birthday = user.birthday
        setTimeout(() => {
          let settings = {
              "async": true,
              "crossDomain": true,
              "url": "https://manage.kmail-lists.com/ajax/subscriptions/subscribe",
              "method": "POST",
              "headers": {
                "content-type": "application/x-www-form-urlencoded",
                "cache-control": "no-cache"
              },
            "data": data
          };
          $.ajax(settings).done(function(response) {
            console.log(response)
            if(response.success) localStorage.removeItem('user_klaviyo');
          })
        }, 3000);
      }
    }
  </script>
{% endif %}